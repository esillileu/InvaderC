{
  "version": 3,
  "cmakeMinimumRequired": { "major": 3, "minor": 19 },

  "configurePresets": [
    {
      "name": "msvc-x64-debug",
      "displayName": "MSVC Debug (Windows)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "gcc-x64-debug",
      "displayName": "GCC Debug (WSL/Linux)",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "gcc-x64-release",
      "displayName": "GCC Release (WSL/Linux)",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],

  "buildPresets": [
    { "name": "msvc-debug", "configurePreset": "msvc-x64-debug" },
    { "name": "gcc-debug", "configurePreset": "gcc-x64-debug" },
    { "name": "gcc-release", "configurePreset": "gcc-x64-release" }
  ]
}